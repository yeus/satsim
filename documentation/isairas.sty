\twocolumn
\columnsep 8mm
\textheight 230mm
\textwidth 170mm
\topmargin -2.5mm
\oddsidemargin -5mm
\evensidemargin -5mm
\parindent 6mm

\pagestyle{empty}

\def\title#1{\gdef\@title{#1}}
\def\subtitle#1{\gdef\@subtitle{#1}}
\def\author#1{\gdef\@author{#1}}
\def\affiliation#1{\gdef\@affiliation{#1}}

\def\@maketitle{\newpage%
  \null%
  \begin{center} %
       \vskip -10mm %
    {\Large\bf \@title \par} %
       \vskip 1.5mm %
     {\large\bf \@subtitle \par} %
       \vskip 5.0mm %
     {\large \@author \par} %
       \vskip 3.8mm %
     {\large \@affiliation \par} %
  \end{center} %
   \par
    \vskip 25pt}

