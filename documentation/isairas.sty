\long\def\@makecaption#1#2{
 \vskip 10pt 
  \setbox\@tempboxa\hbox{\bf #1 #2}
  \ifdim \wd\@tempboxa >\hsize 
  \begin{list}{}{\labelwidth 0pt \leftmargin 1.5cm \itemindent -0.5cm
                 \rightmargin 1cm }
    \item[#1] #2
  \end{list}
  \else \hbox
  to\hsize{\hfil\box\@tempboxa\hfil} 
  \fi
  }